<%
  metas = ""
  metas += "#{record.meta.bedroom_count} #{t("realty.bedrooms")}" if record.meta.bedroom_count
  metas += " - #{record.meta.area.name}" if record.meta.area
%>

<%= link_to(record.public_url, :class => "thumbnail thumbnail-property") do %>
  <%= image_fu(record.thumbnail, "720x440#", :class => "img-responsive") %>
  <div class="caption">
	  <h3><%= record.title %></h3>
   	<p class="tags-list">
      <%= metas %>
   	</p>
    <p class="price"><%= rental_min_price_value(record) %></p>
    <%= content_tag(:p, :class => "body") do %>
      <%= truncate_html(strip_tags(record.body), :length => 120, :omission => "...") %>
    <% end if record.body.present? %>
    <% if record.end_display %>
    <i class="fa fa-heart heart"></i>
  <% end %>
  </div>
  
  <div class="badges">
  <% unless record.badge.blank? %>
    <div class="thumbnail-badge"><%= record.badge %></div>
  <% end %>
  <% unless record.info_title.blank? %>
    <div class="thumbnail-info"><%= record.info_title %></div>
  <% end %>
  </div>
<% end %>