        <% end %>
        <div id="cat-<%= index %>" class="thumbnail thumbnail-category">
          <div class="img-wrapper"><%= image_tag("lifetyle_0#{index+1}.jpg") %></div>
          
          <div class="caption">
           <h3 class="title"><%= link_to(c.title, c.public_url) %></h3>

           <h4 class="body"><%= link_to(c.body, c.public_url) %></h4>
           <%#= link_to("Discover", c.public_url, :class => "btn btn-inverse") %>
