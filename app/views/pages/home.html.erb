<%
if @rent_section = site.rental_property_lists.live.first
  unless @random_rental_property = @rent_section.rental_properties.in_city(site.cities.first).live.end_display.all.sample(1).first
    @random_rental_property = @rent_section.rental_properties.in_city(site.cities.first).live.all.sample(1).first
  end
  @promo_rental_property = @rent_section.rental_properties.live.with_promo.all.sample(4)
  @categories = @rent_section.categories
  @promotions = @rent_section.rental_properties.live.with_promo.limit(9)
  @infos = @rent_section.rental_properties.live.with_info.limit(3)
  @end_display = @rent_section.rental_properties.live.end_display.limit(3)
end
if @sale_section = site.sale_property_lists.live.first 
  @random_sale_property = @sale_section.sale_properties.in_city(site.cities.first).live.all.sample(1).first
  @sale_properties = @sale_section.sale_properties.in_city(site.cities.first).live.all.sample(6)
end 
@lifestyle_categories ||= site.categories.named("lifestyles").children
@features ||= site.features.live
%>

<!-- Hero
  ================================================== -->
  <section class="hero-slider" id="hero-slider">
    <ul class="slides">
      <% @features.each do |feature| %>
      <li class="overlayx">
        <% if image = feature.thumbnail(site.preferred_features_image_size) %>
        <div class="background-image-holder parallax-background ">
          <%= image_tag(image.url, :class => "background-image") %>
        </div>
        <% end %>
        <% if feature.title.present? || feature.body.present? %>

        <div class="container align-vertical">
          <div class="row">
            <div class="col-md-6 col-sm-9 col-md-offset-3">

              <h1 class="text-white"><%= feature.title %></h1>
              <% if feature.owner and url = feature.owner.public_url %>
              <p><%= link_to(t("features.view_more"), url, :class => 'btn btn-primary btn-white') %></p>
              <% end %>
            </div>
          </div>
        </div><!--end of container-->
        <% end %>
      </li>
      <% end %>
    </ul>
    <a href="prev" class="nav-slide prev" data-target="#hero-slider"><span class="fa fa-angle-left fa-3x"></span></a>
    <a href="next" class="nav-slide next" data-target="#hero-slider"><span class="fa fa-angle-right fa-3x"></span></a>
  </section>

<!-- Search
  ================================================== -->
  <%= render "search" %>

