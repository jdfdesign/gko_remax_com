<% if site.preferred_google_map_api_key.present? && local_assigns.has_key?(:point) %>
  <% content_for :before_javascript_libraries do -%>
    <script type='text/javascript' src="http://maps.google.com/maps/api/js?key=<%= site.preferred_google_map_api_key %>&sensor=false"></script>
  <% end %>
  <div id="map-canvas" data-point="<%= point %>"></div>
<% end %>