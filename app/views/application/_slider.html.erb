<% 
    rand_id = "slider_#{rand(10000)}" 
%>
<div class="image-slider" id="slider">  
  <ul class="slides">
    <% images.each do |img| %>
    <% 
        geom = case request.env['mobvious.device_type']
        when :mobile
          img.portrait? ? "x320" : "480x320#"
        when :tablet
          img.portrait? ? "x768" : "1024x768#"
        else
          img.portrait? ? "x768" : "1140x768#"
        end
    %>
    <li>
        <span><a href="//fr.pinterest.com/pin/create/button/?media=<%= img.thumbnail(geom).url() %>&description=remax-stbarths" data-pin-do="buttonPin" data-pin-config="none" data-pin-color="red" data-pin-height="28" class="hidden-print">
            <img src="//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_red_28.png" class="hidden-print"/>
        </a></span>
        <%= image_fu(img, geom, :class => "img-responsive") %></li>
    <% end %>
  </ul>
  <a href="prev" class="nav-slide prev hidden-print" data-target="#slider"><span class="fa fa-angle-left fa-3x"></span></a>
  <a href="next" class="nav-slide next hidden-print" data-target="#slider"><span class="fa fa-angle-right fa-3x"></span></a>
</div><!--end of image slider-->

<div id="carousel" class="flexslider">
  <ul class="slides">
    <% images.each do |img| %>
      <li><%= image_fu(img, "480x320#", :class => "img-responsive") %></li>
    <% end %>
  </ul>
</div>
