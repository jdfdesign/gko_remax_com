<% 
    rand_id = "slider_#{rand(10000)}" 
    geom = case request.env['mobvious.device_type']
    when :mobile
      "480x320#"
    when :tablet
      "1024x768#"
    else
      "1140x734#"
    end

%>
<div class="image-slider" id="<%= rand_id %>">  
  <ul class="slides">
    <% images.each do |img| %>
    <li>
        <a href="//fr.pinterest.com/pin/create/button/?media=<%= img.thumbnail(geom).url() %>&description=remax-stbarths" data-pin-do="buttonPin" data-pin-config="none" data-pin-color="red" data-pin-height="28" class="hidden-print">
            <img src="//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_red_28.png" class="hidden-print"/>
        </a>
        <%= image_fu(img, geom, :class => "img-responsive") %></li>
    <% end %>
  </ul>
  <a href="prev" class="nav-slide prev hidden-print" data-target="#<%= rand_id %>"><span class="fa fa-angle-left fa-3x"></span></a>
    <a href="next" class="nav-slide next hidden-print" data-target="#<%= rand_id %>"><span class="fa fa-angle-right fa-3x"></span></a>
</div><!--end of image slider-->
